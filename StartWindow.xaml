<Window x:Class="Homework_11.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        WindowStartupLocation="CenterScreen"
        Title="Start"         
        Height="180" 
        Width="350"
        ResizeMode="NoResize">
    
    <StackPanel>

        <Label Content="Выберете пользователя"
               HorizontalAlignment="Center"
               Margin="0,10"
               FontWeight="SemiBold"
               FontSize="25"/>

        <Grid Height="50">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Консультант"
                    Margin="10,0"
                    FontSize="18"
                    FontWeight="SemiBold" 
                    Click="OnButton_Сonsultant"/>

            <Button Grid.Column="1"
                    Content="Менеджер"
                    Margin="10,0,10,0"
                    FontSize="18"
                    FontWeight="SemiBold" 
                    Click="OnButton_Manager"/>
        </Grid>
        
    </StackPanel>
</Window>
